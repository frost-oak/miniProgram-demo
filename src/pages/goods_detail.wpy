  <view class="part">
    <!-- <Address> -->
    <view class="part-item">
      <text class="note">送至</text>
      <text class="description" @tap="chooseAddress">{{address}}</text>
      <view class="iconfont icon-jiantouyou"></view>
    </view>
    <!-- </Address> -->
  </view>

