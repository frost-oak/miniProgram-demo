<script>
import wepy from 'wepy'
import fetch from '../utils/fetch'
import WxParse from '../lib/wxParse/wxParse'

// 首字母大写
export default class Index extends wepy.page {
  config = {
    navigationBarTitleText: '品优购',
    navigationBarBackgroundColor: '#ff2d4a',
    navigationBarTextStyle: 'white'
  }

  data = {
    detail: {},
    address: '请选择收货地址',
    tabid: 1
  }

  methods = {
    // 选择地址的事件处理函数
    async chooseAddress() {
      let res = await wepy.chooseAddress()
      console.log(res)

      this.address = `${res.provinceName}${res.cityName}${res.countyName}${res.detailInfo}`
      this.$apply()

      wepy.setStorageSync('address', res)
    },

    // 切换tab的事件处理函数
    toggleTab(tabid) {
      // console.log(tabid)
      this.tabid = tabid
    },
    // 将商品添加到购物车中
    addCart() {
      let { goods_id, goods_name, goods_price, goods_small_logo } = this.detail
      // 如果这件商品已经添加到购物车里了, 缓存中就有数据cart ,就将这个数据的数量加一,如果没有这个商品就创建一个新的商品数据
      let cart = wepy.getStorageSync('cart') || []

      let goods = cart.find(item => item.goods_id === this.detail.goods_id)
      if (goods) {
        // 有就将数量值加1
        goods.goods_num++
      } else {
        // 没有就添加一个新的
        cart.push({
          goods_id,
          goods_name,
          goods_price,
          goods_small_logo,
          goods_num: 1,
          isChecked: true
        })
      }

      wepy.setStorageSync('cart', cart)
      wepy.showToast({
        title: '加入购物车成功'
      })
    },

    // 跳转到购物车页面
    gotoCart() {
      wepy.switchTab({
        url: '/pages/cart'
      })
    }
  }

  // 加载页面的生命周期回调函数
  onLoad(query) {
    this.getDetail(query.goods_id)
    // 从缓存中获取地址信息
    let res = wepy.getStorageSync('address')
    if (res) {
      this.address = `${res.provinceName}${res.cityName}${res.countyName}${res.detailInfo}`
    }
  }

  async getDetail(id) {
    let res = await fetch({
      url: '/goods/detail',
      data: {
        goods_id: id
      }
    })

    // console.log(res)
    this.detail = res.data.data
    this.$apply()

    // 把图文详情的html转成wxml
    WxParse.wxParse('article', 'html', this.detail.goods_introduce, this, 0)
  }

  // 为了不看到隐藏wxparse中的警告信息,提供一个函数
  wxParseImgLoad() {}
}
</script>
